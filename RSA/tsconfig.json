{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "./build",
        "lib": [
        "dom",
        "es2015.promise",
        "es5"
        ]
    },
    "include": [
        "src/*", "test/*"
    ],
    "exclude": [
        "node_modules",
    ]
}
